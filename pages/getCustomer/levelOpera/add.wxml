<block wx:if="{{$taroCompReady}}">
    <root compid="{{$compid__1728}}">
        <view class="editLevel_container">
            <view class="editLevel_caption_wrap">
                <nav-bar compid="{{$compid__1729}}">
                    <icon-font compid="{{$compid__1730}}"></icon-font>
                </nav-bar>
            </view>
            <view class="editLevel_main_wrap">
                <scroll-view class="editLevel_main_box" scroll-y="{{true}}">
