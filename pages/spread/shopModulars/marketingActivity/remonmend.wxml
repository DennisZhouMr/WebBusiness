<block wx:if="{{$taroCompReady}}">
    <root compid="{{$compid__1529}}">
        <view class="common-wrapper detail-wrapper">
            <nav-bar compid="{{$compid__1530}}"></nav-bar>
            <view class="detail-main">
                <view class="header_title">
                    <view class="title">活动进行中</view>
                    <view class="desc">活动为期 30 天，当前第 1 天</view>
                </view>
                <at-tabs compid="{{$compid__1531}}">
                    <at-tabs-pane compid="{{$compid__1532}}">
                        <block>
                            <view class="effect-dl" wx:key="id" wx:for="{{activeEffect}}" wx:for-item="item" wx:for-index="_anonIdx4">
                                <view class="dt">{{item.title}}</view>
                                <view class="at-row dd-box">
                                    <view class="at-col at-col-6 dd" wx:key="id" wx:for="{{item.child}}" wx:for-item="sItem" wx:for-index="_anonIdx2">
                                        <view class="num">{{sItem.num}}</view>
                                        <view class="text">{{sItem.title}}</view>
                                    </view>
                                </view>
                            </view>
                            <view class="remonmend-card">
                                <view class="title">
                                    <view class="content">推荐记录</view>
                                    <view class="extra">
                                        <view class="info">所有人数</view>
                                        <view class="icon">
                                            <icon-font compid="{{$compid__1533}}"></icon-font>
                                        </view>
                                    </view>
                                </view>
                                <view class="remonment-list">
                                    <block wx:if="{{remmonmentList.length <= 0}}">
                                        <view class="empty">还没有推荐记录，赶紧去推荐</view>
                                    </block>
                                    <remonmend-card wx:for="{{loopArray120}}" wx:for-item="item" wx:for-index="_anonIdx6" compid="{{item.$compid__1528}}"></remonmend-card>
                                </view>
                                <block wx:if="{{!showMore && remmonmentList.length > 0}}">
                                    <view class="down" bindtap="handleMoreClick">
                                        <icon-font compid="{{$compid__1534}}"></icon-font>
                                    </view>
                                </block>
                            </view>
                        </block>
                    </at-tabs-pane>
                    <at-tabs-pane compid="{{$compid__1535}}">
                        <view class="detail-container">
                            <view class="detail-list">
                                <view class="title">活动规则</view>
                                <view class="detail-list-item">
                                    <view class="content">活动名称</view>
                                    <view class="extra">读取名称参数</view>
                                </view>
                                <view class="detail-list-item">
                                    <view class="content">活动周期</view>
                                    <view class="extra">读取活动周期参数</view>
                                </view>
                            </view>
                            <view class="detail-list">
                                <view class="title">活动消费券</view>
                                <view class="detail-list-item">
                                    <view class="content">券类型</view>
                                    <view class="extra">折扣券／代金券／礼券／商品券</view>
                                </view>
                                <view class="detail-list-item">
                                    <view class="content">优惠名称</view>
                                    <view class="extra">名称参数</view>
                                </view>
                                <view class="detail-list-item">
                                    <view class="content">优惠类型</view>
                                    <view class="extra">参数</view>
                                </view>
                            </view>
                            <view class="detail-list">
                                <view class="title">活动礼品</view>
                                <view class="detail-list-item">
                                    <view class="content">推荐人礼品</view>
                                    <view class="extra">0积分/礼券名/0份(数量)</view>
                                </view>
                                <view class="detail-list-item">
                                    <view class="content">被推荐人礼品</view>
                                    <view class="extra">0积分/礼券名</view>
                                </view>
                                <view class="detail-list-item">
                                    <view class="content">新客专享</view>
                                    <view class="extra">是或否</view>
                                </view>
                            </view>
                        </view>
                    </at-tabs-pane>
                </at-tabs>
            </view>
            <view class="button-position">
                <at-button compid="{{$compid__1536}}">终止活动</at-button>
            </view>
        </view>
    </root>
</block>